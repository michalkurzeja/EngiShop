{% extends 'EngiShopBundle::admin_layout.html.twig' %}

{% block header %}
    <h1>Edytuj Post - "{{ post.title }}"</h1>
{% endblock %}

{% block content %}
    <form class="contain-floats" action="{{ path('engishop_admin_post_edit', {'id': post.id}) }}" method="post" {{ form_enctype(form) }} novalidate>
        {{ form_errors(form) }}

        {{ form_rest(form) }}

        <div class="col-lg-offset-3 col-lg-8">
            <div class="buttons-wrap inline-block">
                <a href="{{ path('engishop_admin_post') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Cofnij</a>
                <button type="submit" class="btn btn-primary">Zapisz <span class="glyphicon glyphicon-chevron-right"></span></button>
            </div>
        </div>
    </form>

    <script type="text/javascript">
        $(function() {
            $('textarea.summernote').summernote({
                height: 300,
                minHeight: 300
            });
        });
    </script>
{% endblock %}